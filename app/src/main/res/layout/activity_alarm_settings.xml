<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".AlarmSettingsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置自定义闹钟时间"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="393dp"
        android:layout_height="168dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="白班闹钟时间 \n(4:00 - 8:00)"
                android:textSize="16sp" />

            <TimePicker
                android:id="@+id/time_picker_day_shift"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:timePickerMode="spinner" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="夜班闹钟时间 \n(16:00 - 20:00)"
                android:textSize="16sp" />

            <TimePicker
                android:id="@+id/time_picker_night_shift"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:timePickerMode="spinner" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="勿扰模式设置"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置勿扰模式的时间范围"
        android:textSize="16sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TimePicker
            android:id="@+id/time_picker_dnd_start"
            android:layout_width="83dp"
            android:layout_height="94dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:timePickerMode="spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:textSize="16sp"
            android:layout_marginHorizontal="4dp"
            android:layout_gravity="center_vertical"/>

        <TimePicker
            android:id="@+id/time_picker_dnd_end"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:timePickerMode="spinner" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_set_dnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置勿扰模式"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btn_set_custom_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置闹钟"
        android:layout_marginTop="8dp"/>

</LinearLayout> 